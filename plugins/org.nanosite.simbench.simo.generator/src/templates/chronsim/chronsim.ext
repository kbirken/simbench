import hbsim;
extension templates::helpers;

cached String funcName (FunctionBlock fb, Integer taskgroup) : fb.id() + "_TG" + taskgroup;
cached String funcName (Behaviour b) : b.getFB().id() + "_" + b.id();

// convert slashes to backslashes in path
cached String toBackslash (String path) : path.replaceAll('/', "\\\\");

// get set of taskgroup ids for a FunctionBlock
cached Set[Integer] getTaskgroups (FunctionBlock fb, Model model) :
	fb.getReachableBehaviours(model).taskgroup.toSet();
